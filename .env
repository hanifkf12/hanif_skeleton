NAME=test
PORT=9000
DB_DRIVER=postgres
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USERNAME=
DB_PASSWORD=
DB_NAME=test_skeleton

# Storage Configuration
# Options: local, gcs, s3, minio
STORAGE_DRIVER=local

# Local Storage Config
STORAGE_LOCAL_BASE_PATH=./storage
STORAGE_LOCAL_BASE_URL=http://localhost:9000/files

# Google Cloud Storage Config
STORAGE_GCS_BUCKET=

# S3/MinIO Config
STORAGE_S3_ENDPOINT=
STORAGE_S3_REGION=us-east-1
STORAGE_S3_ACCESS_KEY_ID=
STORAGE_S3_SECRET_ACCESS_KEY=
STORAGE_S3_BUCKET=
STORAGE_S3_USE_SSL=true

# Crypto Configuration
# Generate key: openssl rand -base64 32
ENCRYPTION_KEY=your-secret-encryption-key-here
BCRYPT_COST=10

# JWT Configuration
# Generate key: openssl rand -base64 32
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ISSUER=hanif-skeleton
JWT_EXPIRY=24h

# Cache Configuration
# Options: redis, memory
CACHE_DRIVER=memory
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_PASSWORD=
CACHE_DB=0

# HTTP Client Configuration
HTTP_CLIENT_TIMEOUT=30s
HTTP_CLIENT_MAX_RETRIES=3
HTTP_CLIENT_RETRY_WAIT_TIME=1s
HTTP_CLIENT_FOLLOW_REDIRECT=true

# Queue Configuration
# Options: asynq
QUEUE_DRIVER=asynq
QUEUE_HOST=localhost
QUEUE_PORT=6379
QUEUE_PASSWORD=
QUEUE_DB=1

